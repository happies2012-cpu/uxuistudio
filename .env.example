# ZipWP Platform - Environment Configuration

# ============================================================================
# AI MODEL CONFIGURATION
# ============================================================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
AI_MODEL=claude-sonnet-4-20250514
AI_TEMPERATURE=0.10
AI_TOP_P=0.8

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
LOG_LEVEL=INFO
MAX_CONCURRENT_SITES=5
ENABLE_CACHING=true
CACHE_TTL_HOURS=24

# ============================================================================
# WORDPRESS DEFAULT CREDENTIALS (Optional)
# ============================================================================
DEFAULT_WP_ADMIN_USER=admin
DEFAULT_WP_ADMIN_EMAIL=admin@example.com

# ============================================================================
# HOSTING PROVIDER APIs (Optional)
# ============================================================================
# DigitalOcean
DIGITALOCEAN_TOKEN=your_do_token_here

# AWS
AWS_ACCESS_KEY=your_aws_key_here
AWS_SECRET_KEY=your_aws_secret_here

# ============================================================================
# DNS PROVIDER APIs (Optional)
# ============================================================================
# Cloudflare
CLOUDFLARE_API_TOKEN=your_cf_token_here
CLOUDFLARE_ZONE_ID=your_zone_id_here

# ============================================================================
# FASTAPI SERVER CONFIGURATION
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_CORS_ORIGINS=http://localhost:3002,http://localhost:3000

# ============================================================================
# WORDPRESS TEST SITE (For Testing Deployment)
# ============================================================================
TEST_WP_SITE_URL=https://yoursite.com
TEST_WP_USERNAME=admin
TEST_WP_APP_PASSWORD=xxxx xxxx xxxx xxxx
TEST_WP_SSH_HOST=yoursite.com
TEST_WP_SSH_USER=root
TEST_WP_SSH_KEY=/path/to/private_key
